{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "ES6",
    "lib": ["es2021", "esnext.asynciterable", "DOM"],
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true, // Eases ESM support
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "allowJs": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "importHelpers": true
  },
  "include": ["src/**/*.ts", "src/**/*.json", ".env", "api/**/*.ts"],
  "exclude": ["node_modules", "src/http", "src/logs", "src/tests"]
}
